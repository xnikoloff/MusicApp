@model List<AllAlbumsDTO>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-2">
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Genres</th>
                        <th>Release Date</th>
                        <th colspan="2">Operations</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(AllAlbumsDTO dto in Model)
                    {
                        <tr>
                            <td>@dto.Name</td>
                            <td>
                            @foreach(string genre in @dto.AlbumGenres ?? new List<string>())
                            {
                                @genre
                            }
                            </td>
                            <td>@dto.ReleaseDate.ToLongDateString()</td>
                            <td>
                                <a asp-action="Update" asp-route-id="@dto.Id"class="btn btn-warning btn-sm text-white">Update</a>
                                <a asp-action="Delete" asp-route-id="@dto.Id"class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>