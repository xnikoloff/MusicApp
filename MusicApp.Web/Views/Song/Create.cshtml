@model CreateSongDTO

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-4">
            <form action="Create" method="post">
                <div class="form-group">
                    <label asp-for="SongTitle"></label>
                    <input asp-for="SongTitle" class="form-control" />
                    <span asp-validation-for="@Model.SongTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Genre"></label>
                    <select asp-for="Genre" asp-items="@Html.GetEnumSelectList<Genre>()" class="form-control">
                        <option>Select Genre</option>
                    </select>
                    <span asp-validation-for="Genre" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-success">Create</button>
            </form>
        </div>
    </div>
</div>