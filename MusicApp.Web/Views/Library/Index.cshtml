@model List<SongLibraryDTO>

<div class="container">
    <div class="row">
        <div class="col-12 col-md-6 col-lg-2">
            <a asp-action="Create" class="btn btn-success">Create</a>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Genre</th>
                        <th>Albums</th>
                        <th>Artists</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(SongLibraryDTO dto in Model)
                    {
                        <tr>
                            <td>@dto.SongTitle</td>
                            <td>@dto.SongGenre</td>
                            <td>
                                @foreach(Album album in dto.Albums)
                                {
                                    @(album.Name ?? "" + Environment.NewLine)
                                }
                            </td>
                            <td>
                                @foreach(Artist artist in dto.Artists)
                                {
                                    @(artist.StageName ?? "" + Environment.NewLine)
                                }
                            </td>
                        </tr>
                    }
                    
                </tbody>
            </table>
        </div>
    </div>
</div>